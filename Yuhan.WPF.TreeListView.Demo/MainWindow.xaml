<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    xmlns:s='clr-namespace:System;assembly=mscorlib' 
	    xmlns:l='clr-namespace:Yuhan.WPF;assembly=Yuhan.WPF.TreeListView' 
		x:Class="Yuhan.WPF.TreeListView.Demo.MainWindow"
		Title="TreeListView" Width="640" Height="480">
    <Window.Resources>
        <l:LevelToIndentConverter x:Key="LevelToIndentConverter" />
        <Style x:Key="ExpandCollapseToggleStyle"
           TargetType="{x:Type ToggleButton}">
            <Setter Property="Focusable"
              Value="False"/>
            <Setter Property="Width"
              Value="19"/>
            <Setter Property="Height"
              Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border Width="19"
                    Height="13"
                    Background="Transparent">
                            <Border Width="9"
                      Height="9"
                      BorderThickness="1"
                      BorderBrush="#FF7898B5"
                      CornerRadius="1"
                      SnapsToDevicePixels="true">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0"
                                       EndPoint="1,1">
                                        <LinearGradientBrush.GradientStops>
                                            <GradientStop Color="White"
                                    Offset=".2"/>
                                            <GradientStop Color="#FFC0B7A6"
                                    Offset="1"/>
                                        </LinearGradientBrush.GradientStops>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Path x:Name="ExpandPath"
                      Margin="1,1,1,1"
                      Fill="Black"
                      Data="M 0 2 L 0 3 L 2 3 L 2 5 L 3 5 L 3 3 
                            L 5 3 L 5 2 L 3 2 L 3 0 L 2 0 L 2 2 Z"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                       Value="True">
                                <Setter Property="Data"
                        TargetName="ExpandPath"
                        Value="M 0 2 L 0 3 L 5 3 L 5 2 Z"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="CellTemplate_Name" >
            <DockPanel>
                <ToggleButton x:Name="Expander" 
                      Style="{StaticResource ExpandCollapseToggleStyle}" 
                      Margin="{Binding Level,
                             Converter={StaticResource 
                                        LevelToIndentConverter},
                             RelativeSource={RelativeSource 
                                             AncestorType=
                                             {x:Type l:TreeListViewItem}}}"
                      IsChecked="{Binding Path=IsExpanded,
                                 RelativeSource={RelativeSource 
                                                 AncestorType=
                                                  {x:Type l:TreeListViewItem}}}"
                      ClickMode="Press" />
                <TextBlock Text="{Binding Name}"/>
            </DockPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=HasItems,
                               RelativeSource={RelativeSource 
                               AncestorType={x:Type l:TreeListViewItem}}}" 
                     Value="False">
                    <Setter TargetName="Expander"
                  Property="Visibility"
                  Value="Hidden"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <l:TreeListView>
        <l:TreeListView.ColumnCollection>
            <l:TreeGridViewColumn 
                Header="Name"  Expandable="True"
                CellTemplate="{StaticResource CellTemplate_Name}" />
            <l:TreeGridViewColumn  Header="IsAbstract" Expandable="False"
                      DisplayMemberBinding="{Binding IsAbstract}" Width="60" >
            </l:TreeGridViewColumn>
            <l:TreeGridViewColumn  Header="Namespace" Expandable="True"
                      DisplayMemberBinding="{Binding Namespace}" />
        </l:TreeListView.ColumnCollection>

        <l:TreeListViewItem>
            <l:TreeListViewItem.Header>
                <x:Type TypeName="DependencyObject" />
            </l:TreeListViewItem.Header>

            <l:TreeListViewItem>
                <l:TreeListViewItem.Header>
                    <x:Type TypeName="Visual" />
                </l:TreeListViewItem.Header>

                <l:TreeListViewItem>
                    <l:TreeListViewItem.Header>
                        <x:Type TypeName="UIElement" />
                    </l:TreeListViewItem.Header>

                    <l:TreeListViewItem>
                        <l:TreeListViewItem.Header>
                            <x:Type TypeName="FrameworkElement" />
                        </l:TreeListViewItem.Header>

                        <l:TreeListViewItem>
                            <l:TreeListViewItem.Header>
                                <x:Type TypeName="Control" />
                            </l:TreeListViewItem.Header>

                            <l:TreeListViewItem>
                                <l:TreeListViewItem.Header>
                                    <x:Type TypeName="ContentControl" />
                                </l:TreeListViewItem.Header>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="ButtonBase" />
                                    </l:TreeListViewItem.Header>

                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="GridViewColumnHeader" />
                                        </l:TreeListViewItem.Header>
                                    </l:TreeListViewItem>


                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="Button" />
                                        </l:TreeListViewItem.Header>
                                    </l:TreeListViewItem>

                                </l:TreeListViewItem>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="HeaderedContentControl" />
                                    </l:TreeListViewItem.Header>

                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="Expander" />
                                        </l:TreeListViewItem.Header>
                                    </l:TreeListViewItem>

                                </l:TreeListViewItem>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="StatusBarItem" />
                                    </l:TreeListViewItem.Header>
                                </l:TreeListViewItem>

                            </l:TreeListViewItem>


                            <l:TreeListViewItem>
                                <l:TreeListViewItem.Header>
                                    <x:Type TypeName="ItemsControl" />
                                </l:TreeListViewItem.Header>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="Selector" />
                                    </l:TreeListViewItem.Header>

                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="ListBox" />
                                        </l:TreeListViewItem.Header>

                                        <l:TreeListViewItem>
                                            <l:TreeListViewItem.Header>
                                                <x:Type TypeName="ListView" />
                                            </l:TreeListViewItem.Header>
                                        </l:TreeListViewItem>

                                    </l:TreeListViewItem>

                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="ComboBox" />
                                        </l:TreeListViewItem.Header>
                                    </l:TreeListViewItem>

                                </l:TreeListViewItem>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="HeaderedItemsControl" />
                                    </l:TreeListViewItem.Header>

                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="TreeViewItem" />
                                        </l:TreeListViewItem.Header>

                                        <l:TreeListViewItem>
                                            <l:TreeListViewItem.Header>
                                                <x:Type TypeName="l:TreeListViewItem" />
                                            </l:TreeListViewItem.Header>
                                        </l:TreeListViewItem>

                                    </l:TreeListViewItem>

                                </l:TreeListViewItem>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="TreeView" />
                                    </l:TreeListViewItem.Header>

                                    <l:TreeListViewItem>
                                        <l:TreeListViewItem.Header>
                                            <x:Type TypeName="l:TreeListView" />
                                        </l:TreeListViewItem.Header>
                                    </l:TreeListViewItem>

                                </l:TreeListViewItem>

                                <l:TreeListViewItem>
                                    <l:TreeListViewItem.Header>
                                        <x:Type TypeName="StatusBar" />
                                    </l:TreeListViewItem.Header>
                                </l:TreeListViewItem>

                            </l:TreeListViewItem>
                        </l:TreeListViewItem>

                        <l:TreeListViewItem >
                            <l:TreeListViewItem.Header>
                                <x:Type TypeName="GridViewRowPresenterBase" />
                            </l:TreeListViewItem.Header>

                            <l:TreeListViewItem>
                                <l:TreeListViewItem.Header>
                                    <x:Type TypeName="GridViewHeaderRowPresenter" />
                                </l:TreeListViewItem.Header>
                            </l:TreeListViewItem>

                            <l:TreeListViewItem>
                                <l:TreeListViewItem.Header>
                                    <x:Type TypeName="GridViewRowPresenter" />
                                </l:TreeListViewItem.Header>
                            </l:TreeListViewItem>

                        </l:TreeListViewItem>

                    </l:TreeListViewItem>
                </l:TreeListViewItem>
            </l:TreeListViewItem>

            <l:TreeListViewItem >
                <l:TreeListViewItem.Header>
                    <x:Type TypeName="ViewBase" />
                </l:TreeListViewItem.Header>
                <l:TreeListViewItem>
                    <l:TreeListViewItem.Header>
                        <x:Type TypeName="GridView" />
                    </l:TreeListViewItem.Header>
                </l:TreeListViewItem>
            </l:TreeListViewItem>

            <l:TreeListViewItem>
                <l:TreeListViewItem.Header>
                    <x:Type TypeName="GridViewColumn" />
                </l:TreeListViewItem.Header>
            </l:TreeListViewItem>

        </l:TreeListViewItem>

        <l:TreeListViewItem>
            <l:TreeListViewItem.Header>
                <x:Type TypeName="GridViewColumnCollection" />
            </l:TreeListViewItem.Header>
        </l:TreeListViewItem>

        <l:TreeListViewItem>
            <l:TreeListViewItem.Header>
                <x:Type TypeName="GridViewColumnHeaderRole" />
            </l:TreeListViewItem.Header>
        </l:TreeListViewItem>

    </l:TreeListView>

</Window>

